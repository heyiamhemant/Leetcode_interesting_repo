{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile and run",
			"type": "shell",
			"command": "",
			"args": [
				"copy",
				"${file}",
				"${workspaceFolder}\\x.cpp",
				"&&",
				"g++",
				"x.cpp",
				"-o",
				"x",
				"&&",
				"x",
				"<",
				".vscode\\input.txt",
				">",
				".vscode\\output.txt",
				"2>",
				".vscode\\error.txt",
				"&&",
				"del",
				"x.exe",
				"&&",
				"del",
				"x.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}